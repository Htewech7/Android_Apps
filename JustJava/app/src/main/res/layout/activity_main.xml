<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kettle"
    android:orientation="vertical"
    tools:context="com.example.maidaly.justjava.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:fontFamily="cursive"
        android:id="@+id/quantity_text_view"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:text="QUANTITY"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textColor="#D09924"
        android:textSize="30sp"
        android:textStyle="bold" />
<LinearLayout
    android:id="@+id/line1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/quantity_text_view"
    android:layout_marginBottom="50dp"
    android:orientation="vertical">
    <Button
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="increment"
        android:background="@drawable/buttonshape"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#F6D600"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/quantity_text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#00000000"
        android:text="0"
        android:textColor="#F6D600"
        android:textSize="35sp" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="decrement"
        android:text="-"
        android:textColor="#F6D600"
        android:textAlignment="center"
        android:background="@drawable/buttonshape"
        android:textSize="35sp" />

</LinearLayout>

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="cursive"
        android:layout_marginStart="30dp"
        android:text="@string/the_price"
        android:layout_below="@id/line1"
        android:background="#00000000"
        android:textAllCaps="true"
        android:textColor="#D09924"
        android:textSize="29sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/price_text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:layout_weight="0"
        android:layout_below="@id/price_text_view"
        android:background="#00000000"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="60dp"
        android:text="0"
        android:textColor="#D09924"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="@drawable/buttonshape"
        android:onClick="submitOrder"
        android:text="ORDER"
        android:textSize="20sp"
        android:textColor="#F6D600"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/b2"
        />


    <Button
        android:id="@+id/b2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="NEW ORDER"
        android:background="@drawable/buttonshape"
        android:textSize="20sp"
        android:textColor="#F6D600"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:onClick="new_order"
        android:layout_gravity="center_horizontal"
        />
</RelativeLayout>


